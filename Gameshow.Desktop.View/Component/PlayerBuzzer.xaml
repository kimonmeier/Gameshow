<UserControl x:Class="Gameshow.Desktop.View.Component.PlayerBuzzer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Gameshow.Desktop.View.Component"
             mc:Ignorable="d"
             d:DesignHeight="60" d:DesignWidth="417px"
             Background="MediumOrchid">
    <UserControl.Triggers>
        <DataTrigger Binding="{Binding IsPressed}" Value="True">
            <DataTrigger.EnterActions>
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Duration="0:0:0:5" Storyboard.TargetProperty="Background" From="MediumOrchid" To="Purple" AutoReverse="True"></DoubleAnimation>
                    </Storyboard>
                </BeginStoryboard>
            </DataTrigger.EnterActions>
        </DataTrigger>
    </UserControl.Triggers>
    <Label FontWeight="Heavy" FontSize="30px" HorizontalAlignment="Center" Content="{Binding PlayerName}" >
    </Label>
</UserControl>
