<UserControl x:Class="Gameshow.Desktop.View.Component.GameMaster.General.ConnectionInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Gameshow.Desktop.View.Component.GameMaster.General"
             mc:Ignorable="d"
             Height="200px"
             Width="200px">
    <GroupBox Header="Verbindungsinformation" Padding="10px">
        <StackPanel>
            <Label Foreground="Black" Content="{Binding Path=ConnectionInfo}"></Label>
            <Button Margin="0px 10px" Command="{Binding Path=LoginCommand}" CommandParameter="{Binding .}">
                Verbinden!
            </Button>
        </StackPanel>
    </GroupBox>
</UserControl>